<h1><%= @recipe.name %></h1>
<h3>Calories</h3>
<%= @recipe.calories %>
<h3>Prep Time</h3>
<%= @recipe.prep_time %>
<h3>Description</h3>
<%= @recipe.description %>
<h3>Dish Style</h3>
<%= @recipe.style.name %>
<h3>Ingredients</h3>
<ul>
<% @recipe.ingredients.each do |ing| %>
    <li>Name: <%= ing.name %> </li>
    <ul>
    <li>Category: <%= ing.category %></li>
    <li>Quantity: <%= @recipe.items.find_by(ingredient: ing).quantity %></li>
    <% #byebug %>
    </ul>
<% end %>
</ul>
<br>
<br>


<%= button_to "Edit Recipe", edit_recipe_path(@recipe), :method => :get %>
<%= button_to "Delete Recipe", recipe_path(@recipe), :method => :delete %>

<%= button_to 'Add to favorites', favorites_create_path(recipe_id: @recipe), method: :post %>

<%= button_to 'Remove from favorites', favorites_destroy_path(recipe_id: @recipe), method: :delete %>






