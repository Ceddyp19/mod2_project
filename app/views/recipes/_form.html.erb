
<%= form_for @recipe do |f| %>
<%= f.label :Name %>
<%= f.text_field :name %><br>
<br>
<%= f.label :Calories %>
<%= f.text_field :calories %><br>
<br>
<%= f.label :Prep_time %>
<%= f.text_field :prep_time %><br>
<br>
<%= f.label :Description %><br>
<%= f.text_area :description%><br>
<br>
<%= f.label :Dish_Style %>
<%= f.collection_select :style_id, Style.all, :id, :name, prompt: true %><br>
<br>
<%= f.label :Ingredients %>
<%= f.fields_for :ingredients do |ingred|  %>
    <br>
    <br>
    <%= ingred.label :name %><br>
    <%= ingred.text_field :name %><br>
    <%= ingred.label :category %><br>
    <%= ingred.text_field :category %><br>
    <%= ingred.check_box :_destroy %>
    <%= ingred.label :_destroy, 'delete' %><br>
<% end %>

<%= f.submit 'Add ingredient', :name => "add_ingredient" %><br>
<%= f.submit 'Delete checked ingredient(s)', :name => "remove_ingredient" %><br>
<%= f.submit %>

<% end %>
