<% stylesheet_link_tag '/assets/stylesheets/application.css' %>
<h1>Create a Recipe!</h1>
<%= form_for @recipe do |f| %>
<%= f.label :Name %>
<%= f.text_field :name %><br>

<%= f.label :Calories %>
<%= f.text_field :calories %><br>

<%= f.label :Prep_time %>
<%= f.text_field :prep_time %><br>

<%= f.label :Description %>
<%= f.text_area :description%><br>

<%= f.label :Style %>
<%= f.collection_select :style_id, Style.all, :id, :name %><br>

<%= f.label :Ingredient %><br>
<%= f.fields_for :ingredients do |ingred|  %>
    <%= ingred.label :name %><br>
    <%= ingred.text_field :name %><br>
    <%= ingred.label :category %><br>
    <%= ingred.text_field :category %><br>
<% end %>
<%= f.submit 'Add ingredient', :name => "add_ingredient" %><br>
<%= f.submit %>


<% end %>

