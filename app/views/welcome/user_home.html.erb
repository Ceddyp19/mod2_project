
<div class="center" align="center" style="padding: 50px;">
<table style="text-align: center;">
  <tr>
    <th><h3>My Recipes</h3></th>
    <th><h3>Favorites</h3></th>
  </tr>
  <tr>
    <td>
    <dl>
    <% @user.recipes.each do |recipe| %>
      <li><%= link_to recipe.name, recipe_path(recipe) %></li>
    <% end %>
    </dl>
    </td>
    <td>
      <dl>
        <% current_user.favorites.each do |fav| %>
          <li><%= link_to fav.recipe.name, recipe_path(fav.recipe) %> </li>
        <% end %>
      </dl>
    </td>
  </tr>
  </table>
</div>
